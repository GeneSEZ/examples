<?xml version="1.0" encoding="UTF-8" ?>
<!--
	example for a project specific typemapping
	
	@author	Nico Herbig
	@date	2008-11-27
 -->
<tns:typeMapping xmlns:tns="http://www.genesez.de/typemapping"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tns:include>
		<tns:file>de/genesez/platform/typo3v4/mvc/typemapping/typemapping.xml</tns:file>
	</tns:include>
	<tns:externalTypes>
		<!-- we used the type 'IntegerType' and declared it as 'external' within the uml model -->
		<tns:type from="IntegerType">
			<!-- default mapping should return the type name -->
			<tns:to>int</tns:to>
			<tns:context name="PHPTypeHint"></tns:context>
			<tns:context name="SQL">int(11)</tns:context>
			<tns:context name="TYPO3">Integer</tns:context>
		</tns:type>
		<!-- we used the type 'TextType' and declared it as 'external' within the uml model -->
		<tns:type from="TextType">
			<!-- default mapping should return the type name -->
			<tns:to>string</tns:to>
			<tns:context name="PHPTypeHint"></tns:context>
			<tns:context name="SQL">varchar(255)</tns:context>
			<tns:context name="TYPO3">String</tns:context>
		</tns:type>
		<!-- we used the type 'LongTextType' and declared it as 'external' within the uml model -->
		<tns:type from="LongTextType">
			<!-- default mapping should return the type name -->
			<tns:to>string</tns:to>
			<tns:context name="PHPTypeHint"></tns:context>
			<tns:context name="SQL">text</tns:context>
			<tns:context name="TYPO3">Text</tns:context>
		</tns:type>
	</tns:externalTypes>
</tns:typeMapping>
